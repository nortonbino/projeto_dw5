
<div class="container new-condominium-btn">
<%= button_to 'New Condominium', new_admins_condominium_path, class: "btn cyan darken-4", :method => :get %>
</div>

<% @condominia.each do |condominium| %>
       <div class="col s12 m7 container admin-card">
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag(condominium.avatar.thumb.url) %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
            <h5>Name</h5>
            <p><%= condominium.name %></p>

            <h5>Number proprieties</h5>
            <p><%= condominium.number_proprieties %></p>

            <h5>Address</h5>
            <p><%= condominium.address %></p>
                </div>

                <div class="card-action">
                <%= button_to 'Show', admins_condominium_path(condominium),  class: "btn  cyan darken-4", :method => :get %>
                <%= button_to 'Edit', edit_admins_condominium_path(condominium),  class: "btn  cyan darken-4", :method => :get %>
                <%= button_to 'Destroy', admins_condominium_path(condominium),  class: "btn  cyan darken-4", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
      <% end %>
<h1>Fees</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Installment</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.value %></td>
        <td><%= fee.installment %></td>
        <td><%= fee.name %></td>
        <td><%= fee.description %></td>
        <td><%= link_to 'Show', fee %></td>
        <td><%= link_to 'Edit', edit_fee_path(fee) %></td>
        <td><%= link_to 'Destroy', fee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


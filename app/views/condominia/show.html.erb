<p id="notice"><%= notice %></p>


<div class="condominia-title">

<form>
    <%= text_field_tag :term %>
    <%= select_date(@my_date, start_year: Date.today.year - 100, end_year: Date.today.year + 5, order: [:month, :year]) %>
    <%= button_to 'Search' %>
</form>

<h1>Fees <%= @my_date.strftime("%m / %Y") %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Installment</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @value ||= 0 %>
  <tbody>    

    <% @fees.each do |fee| %>

<% if fee.created_at.strftime("%m%Y") <= @my_date.strftime("%m%Y") && fee.lastinstallment.strftime("%m%Y") > @my_date.strftime("%m%Y") %>
      <tr>
        <td><%= fee.name %></td>
        <td><%= fee.description %></td>
        <td><%= fee.installment %></td>
        <td><%= fee.value %></td>
        <td><%= button_to 'Show', [@condominium, fee], :method => :get %></td>
        <td><%= button_to 'Edit', edit_condominium_fee_path(@condominium, fee), :method => :get %></td>
        <td><%= button_to 'Destroy', [@condominium, fee], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% @value += fee.value %>   
  <% end %>
    <% end %>
  </tbody>
</table>
      <h2> Value per propriety <%= @value/@condominium.number_proprieties %> </h2>
<br>

<%= button_to 'New Fee', new_condominium_fee_path(@condominium), :method => :get %>

</div>



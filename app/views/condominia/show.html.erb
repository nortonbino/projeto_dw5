<p id="notice"><%= notice %></p>

<div class="condominia-title">

<h1>Fees <%= Date.today.strftime("%m / %Y") %></h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Installment</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @value ||= 0 %>
  <tbody>
    <% @fees.each do |fee| %>
      <% if fee.created_at.strftime("%m%Y") == Date.today.strftime("%m%Y") %>
      <tr>
        <td><%= fee.name %></td>
        <td><%= fee.description %></td>
        <td><%= fee.installment %></td>
        <td><%= fee.value %></td>
        <td><%= fee.created_at.strftime("%m/%Y") %></td>
        <td><%= link_to 'Show', [@condominium, fee] %></td>
        <td><%= link_to 'Edit', edit_condominium_fee_path(@condominium, fee) %></td>
        <td><%= link_to 'Destroy', [@condominium, fee], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
        <% @value += fee.value %>    
      <% end %>
    <% end %>
  </tbody>
</table>
      <h2> Value per propriety <%= @value %> </h2>
<br>

<%= link_to 'New Fee', new_condominium_fee_path(@condominium) %>

</div>
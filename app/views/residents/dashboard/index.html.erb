  <%= image_tag(@condominium.avatar.url) %>


<p>
  <strong>Name:</strong>
  <%= @condominium.name %>
</p>

<p>
  <strong>Number of proprieties:</strong>
  <%= @condominium.number_proprieties %>
</p>

<p>
  <strong>Address:</strong>
  <%= @condominium.address %>
</p>

<%= button_to 'Edit', edit_admins_condominium_path(@condominium), :method => :get %>
<%= button_to 'Back', admins_condominia_path, :method => :get %>

</div>

<p id="notice"><%= notice %></p>


<div class="condominia-title">

<form>
  <%= text_field_tag :term %>
  <%= button_to 'Search' %>
</form>

<form>
  <%= select_date(@my_date, start_year: Date.today.year - 100, end_year: Date.today.year + 5, order: [:month, :year]) %>
  <%= button_to 'Search' %>
</form>

<h1>Fees <%= @my_date.strftime("%m / %Y") %></h1>

<table class="flat-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Installment</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% value ||= 0 %>
  <tbody>    
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.name %></td>
        <td><%= fee.description %></td>
        <td><%= @my_date.month - fee.firstinstallment.month + 1 %>  / <%= fee.installment  %></td>
        <td><%= fee.value %></td>
        <td><%= button_to 'Show', residents_path(fee.id), :method => :get %></td>
      </tr>
        <% value += fee.value %>   
    <% end %>
  </tbody>
</table>
      <h2> Value per propriety <%= (value/@condominium.number_proprieties).round(2) %> </h2>
<br>

<div id='condominium-chat-residents' data-condominium-id="<%= @condominium.id %>" class="row col-md-8 col-md-offset-2">
  
  <h1>Condominium chat</h1>

  <div class="panel panel-default">
  
<div class="panel-body" id="messages">
  <div style="margin-bottom: 30px">
    <% @messages.each do |message| %>
      <div class="container">
        <%= render "shared/messages/message", :message => message %>
      </div>
    <% end %>
  </div>
</div>
   
  </div>

  <%= render partial: 'shared/messages/message_form', locals: {message: @message} %>
</div>
